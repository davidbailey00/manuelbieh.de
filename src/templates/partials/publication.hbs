<div class="row publication">
    <div class="col col-xs-12 col-md-4 col-lg-3 col-xl-2">
        {{#if image}}<img src="{{image}}" />{{/if}}
    </div>
    <div class="col col-xs-12 col-md-8">
        {{#if title}}<h3>{{title}}</h3>{{/if}}
        {{{description}}}
        <p>{{source}}</p>
        {{#if link}}<a href={{link}}>{{linktext}}</a>{{/if}}
    </div>
</div>
